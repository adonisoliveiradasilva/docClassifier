[flake8]
max-line-length = 120
extend-ignore = E203, W503
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .pytest_cache,
    .mypy_cache,
    .coverage,
    htmlcov,
    .tox,
    dist,
    build,
    *.egg-info

per-file-ignores =
    */__init__.py: F401
    */**/__init__.py: F401
